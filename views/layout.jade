doctype html
html
    head
        title= 'Elite Dangerous - Explorer'
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/metisMenu.min.css')
        link(rel='stylesheet', href='/stylesheets/timeline.css')
        link(rel='stylesheet', href='/stylesheets/startmin.css')
        link(rel='stylesheet', href='/stylesheets/morris.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
        script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')

    body
        div#wrapper
            nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
                div.navbar-header: a.navbar-brand(href="#") ED Explorer

                button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                ul.nav.navbar-nav.navbar-left.navbar-top-links
                    li
                        a(href="#")
                            i.fa.fa-home.fa-fw Website

                ul.nav.navbar-right.navbar-top-links
                    li.dropdown.navbar-inverse
                        a.dropdown-toggle(data-toggle="dropdown" href="#")
                            i.fa.fa-bell.fa-fw
                            b.caret
                        ul.dropdown-menu.dropdown-alerts
                            li
                                a(href="#")
                                    div
                                        i.fa.fa-comment.fa-fw New Comment
                                        span.pull-right.text-muted.small 4 minutes ago
                            li.divider
                            li
                                a.text-center(href="#")
                                    strong See All Alerts
                                    i.fa.fa-angle-right
                    li.dropdown
                        a.dropdown-toggle(data-toggle="dropdown" href="#") Commander
                            i.fa.fa-user.fa-fw
                            b.caret
                        ul.dropdown-menu.dropdown-user
                            li
                                a(href="#") Profile
                                    i.fa.fa-user.fa-fw
                            li
                                a(href="#") Settings
                                    i.fa.fa-gear.fa-fw
                            li
                                a(href="#") Logout
                                    i.fa.fa-sign-out.fa-fw

                div.navbar-default.sidebar(role="navigation")
                    div.sidebar-nav.navbar-collapse
                        ul.nav#side-menu
                            li.sidebar-search
                                div.input-group.custom-search-form
                                    input.form-control(type="text" placeholder="Search...")
                                    span.input-group-btn
                                        button.btn.btn-primary(type="button")
                                            i.fa.fa-search
                            li
                                a.active(href="#") Current Expedition
                                    i.fa.fa-dashboard.fa-fw
        div#page-wrapper
            div.container-fluid

                block content


        script(src='/javascripts/jquery.min.js')
        script(src='/javascripts/bootstrap.min.js')
        script(src='/javascripts/metisMenu.min.js')
        script(src='/javascripts/startmin.js')
        block javascript
